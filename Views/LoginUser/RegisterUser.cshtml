@model minipj.Models.AdminUser
@{
    ViewBag.Title = "RegisterUser";
    Layout = "~/Views/Shared/_LayoutCloneWeb.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }

    .p-md-5 {
        padding: 0 !important;
    }

    .card {
        --bs-card-border-color: transparent;
    }
</style>
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <h3 class="text-center fw-bold mx-3 mb-0">Đăng Ký</h3>
                                @using (Html.BeginForm("RegisterUser", "LoginUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()


                                    if (ViewBag.ErrorRegister != null)
                                    {
                                        <p>@ViewBag.ErrorRegister</p>
                                    }

                                    <div class="d-flex flex-column align-items-start mb-4">
                                        @Html.LabelFor(model => model.UserName, new { @class = "form-label", @for = "form3Example4c" })
                                        @Html.PasswordFor(model => model.UserName, new { @class = "form-control", @id = "form3Example4c" })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="d-flex flex-column align-items-start mb-4">
                                        @Html.LabelFor(model => model.UserAccount, new { @class = "form-label", @for = "form3Example4c" })
                                        @Html.PasswordFor(model => model.UserAccount, new { @class = "form-control", @id = "form3Example4c" })
                                        @Html.ValidationMessageFor(model => model.UserAccount, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="d-flex flex-column align-items-start mb-4">
                                        @Html.LabelFor(model => model.PasswordUser, new { @class = "form-label", @for = "form3Example4c" })
                                        @Html.PasswordFor(model => model.PasswordUser, new { @class = "form-control", @id = "form3Example4c" })
                                        @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="d-flex flex-column align-items-start mb-4">
                                        @Html.LabelFor(model => model.ConfirmPass, new { @class = "form-label", @for = "form3Example4cd" })
                                        @Html.PasswordFor(model => model.ConfirmPass, new { @class = "form-control", @id = "form3Example4cd" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })
                                    </div>

                                }

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                    <label class="form-check-label" for="form2Example3">
                                        I agree all statements in <a href="#!">Terms of service</a>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="button" class="btn btn-primary btn-lg">Đăng ký</button>
                                </div>

                                <div class="text-center text-lg-start mt-4 pt-2">

                                    <p class="small fw-bold mt-2 pt-1 mb-0">Đã có tài khoản.<a href="~/LoginUser/index" class="link-danger">Đăng Nhập</a></p>
                                </div>




                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
